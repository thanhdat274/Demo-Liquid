<div class="isolate">
  <div class="rick-text__wrapper {{section.settings.box_section}}">
    <div class="rick-text__block {{section.settings.box_section_content}}">
      {%- for block in section.block -%}
        
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "rick text",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "select",
        "id": "box_section",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center",
        "label": "Box section",
        "info": "Khối tổng bên ngoài"
      }, {
        "type": "select",
        "id": "box_section_content",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left",
        "label": "Box section content",
        "info": "Khối content"
      },
      {
      "type": "header",
      "content": "Padding header"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "padding bottom",
      "default": 40
    }
    ]
  }
{% endschema %}
