{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="isolate">
  <div class="rick-text__wrapper {{section.settings.box_section}}">
    <div class="rick-text__block {{section.settings.box_section_content}}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <h2 class="rich-text__heading rte {{ block.settings.font_size }}" {{ block.shopify_attributes }}>
              {{ block.settings.heading | replace: 'p>', 'span>' }}
            </h2>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "rick text",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "select",
        "id": "box_section",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center",
        "label": "Box section",
        "info": "Khối tổng bên ngoài"
      },
      {
        "type": "select",
        "id": "box_section_content",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left",
        "label": "Box section content",
        "info": "Khối content"
      },
      {
        "type": "header",
        "content": "Padding header"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "padding top",
        "default": 40
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "padding bottom",
        "default": 40
      }
    ],
    "blocks": [
      {
        "type": "heading",
        "name": "Heading",
        "limit": 3,
        "settings": [
          {
            "type": "richtext",
            "id": "heading",
            "default": "<p>Hoc liquid lu qua</p>",
            "label": "Heading"
          },  {
          "type": "select",
          "id": "font_size",
          "options": [
            {
              "value": "h2",
              "label": "lon"
            },
            {
              "value": "h1",
              "label": "rat lon"
            },
            {
              "value": "h0",
              "label": "nho"
            },
            {
              "value": "hxl",
              "label": "trung binh"
            }
          ],
          "default": "h1",
          "label": "rat lon"
        }
        ]
      }
    ],
    "presets": [
      {
        "name": "Rick text",
        "blocks": [
          {
            "type": "heading"
          }
        ]
      }
    ]
  }
{% endschema %}
